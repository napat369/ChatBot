# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# 数据库配置
# MySQL 数据库 (推荐)
DATABASE_URL=mysql+pymysql://root:200316@localhost/chatbot?charset=utf8mb4
